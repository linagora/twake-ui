{
  "name": "twake-ui",
  "version": "0.1.0",
  "private": true,
  "description": "Twake UI monorepo - Shared UI components and theme system for Twake applications",
  "author": "Twake",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/linagora/twake-ui.git"
  },
  "engines": {
    "node": "24.x",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "twake",
    "ui",
    "monorepo",
    "mui",
    "theme"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint --workspaces --if-present -- --fix",
    "clean": "npm run clean --workspaces && rm -rf node_modules"
  },
  "devDependencies": {
    "typescript": "5.5.2"
  }
}
